root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true


# Matches multiple files with brace expansion notation
# Set default charset
[*.{pug,js,jsx,html}]
charset = utf-8
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

# Set default charset
[*.sass]
charset = utf-8
indent_style = tab
indent_size = 1
trim_trailing_whitespace = true
