block variables
- var DATA = self.htmlWebpackPlugin.options.DATA

doctype html
html(lang="en" dir="ltr")
  include ./includes/head.pug

  head
    +head(DATA)
    link(rel='preconnect' href='https://fonts.gstatic.com')
    link(href='https://fonts.googleapis.com/css2?family=Dynalight&display=swap' rel='stylesheet')

  body
    section.intro
    .pin-wrapper
      .sphere
      - let word = 'Alıgment'.split('');
      h1.word
        each character in word
          if character === 'ı'
            span.word__dot
              span.word__single= character
              span.word__ball
          else
            span.word__character= character
